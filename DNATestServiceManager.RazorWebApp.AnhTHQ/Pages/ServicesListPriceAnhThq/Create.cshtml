@page
@model DNATestServiceManager.RazorWebApp.AnhTHQ.Pages.ServicesListPriceAnhThq.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ServicePriceListAnhThq</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ServicePriceListAnhThq.ServiceAnhThqid" class="control-label"></label>
                <select asp-for="ServicePriceListAnhThq.ServiceAnhThqid"
                        class="form-control"
                        asp-items="@(ViewData["ServiceAnhThqid"] as SelectList)">
                    <option value="">-- Select a service --</option>
                </select>
                <span asp-validation-for="ServicePriceListAnhThq.ServiceAnhThqid" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ServicePriceListAnhThq.BasePrice" class="control-label"></label>
                <input asp-for="ServicePriceListAnhThq.BasePrice" class="form-control" />
                <span asp-validation-for="ServicePriceListAnhThq.BasePrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ServicePriceListAnhThq.AdditionalFee" class="control-label"></label>
                <input asp-for="ServicePriceListAnhThq.AdditionalFee" class="form-control" />
                <span asp-validation-for="ServicePriceListAnhThq.AdditionalFee" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ServicePriceListAnhThq.EffectiveDate" class="control-label"></label>
                <input asp-for="ServicePriceListAnhThq.EffectiveDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="ServicePriceListAnhThq.EffectiveDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ServicePriceListAnhThq.ExpiryDate" class="control-label"></label>
                <input asp-for="ServicePriceListAnhThq.ExpiryDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="ServicePriceListAnhThq.ExpiryDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ServicePriceListAnhThq.IsAvailable" class="control-label"></label>
                <select asp-for="ServicePriceListAnhThq.IsAvailable" class="form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span asp-validation-for="ServicePriceListAnhThq.IsAvailable" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
