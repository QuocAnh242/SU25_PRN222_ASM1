<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DNATestServiceManager.RazorWebApp.AnhTHQ</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DNATestServiceManager.RazorWebApp.AnhTHQ.styles.css" asp-append-version="true" />

    <style>
        /* Theme màu trắng - xanh biển nhạt */
        body {
            background-color: #f8fafc; /* nền trắng xanh nhạt */
            color: #333;
        }

        .navbar-custom {
            background-color: #007bff; /* màu xanh bootstrap */
        }

        .navbar-custom .navbar-brand,
        .navbar-custom .nav-link,
        .navbar-custom .nav-item {
            color: #ffffff;
        }

        .navbar-custom .nav-link:hover,
        .navbar-custom .nav-item:hover {
            color: #d0e6ff;
        }

        footer {
            background-color: #e9f2ff;
            padding: 1rem 0;
            color: #007bff;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom navbar-toggleable-sm border-bottom box-shadow mb-4">
            <div class="container-fluid px-4">
                <a class="navbar-brand" asp-area="" asp-page="/Index">DNATestServiceManager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarSupportedContent">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/ServicesAnhThq/Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center">
                        <div class="nav-item text-nowrap me-3">
                            Welcome
                            @* <strong>@Context.Request.Cookies["UserName"].ToString()</strong>  xai cai nay cung dc*@
                            <strong>
                                @if (User.Identity?.IsAuthenticated ?? false)
                                {
                                    @User.Identity.Name
                                }
                                else
                                {
                                    <span>Guest</span>
                                }
                            </strong>
                        </div>
                        <a class="nav-link text-white" asp-area="" asp-page="/Account/Logout">Logout</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-center">
        <div class="container">
            &copy; 2025 - DNATestServiceManager.RazorWebApp.AnhTHQ - <a asp-area="" asp-page="/Privacy" class="text-decoration-none">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
